@page
@model Pizza_Proj.Pages.OrderCheckoutModel
@{
    ViewData["Title"] = "Order Checkout";
}

<h2>@ViewData["Title"]</h2>

<table>
    <thead>
        <tr>
            <th>Pizza Type</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.PizzaType</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>

<p>Total Amount: @Model.TotalAmount</p>

<a asp-page="./OrderConfirmation">Checkout</a>